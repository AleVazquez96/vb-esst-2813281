<Window x:Class="MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:ExampleDesktop"
				mc:Ignorable="d"
				Title="Code Explorer"
				Height="800"
				Width="1000"
				FontSize="24"
				WindowState='Maximized'>
	<Window.Resources>
		<Style TargetType='Button'>
			<Setter Property='Margin'
							Value='20,10' />
			<Setter Property='Padding'
							Value='6' />
			<Setter Property='MinWidth'
							Value='145' />
			<Setter Property='VerticalAlignment'
							Value='Top' />
			<Setter Property='HorizontalAlignment'
							Value='Center' />
		</Style>
		<Style TargetType='RadioButton'>
			<Setter Property='VerticalContentAlignment'
							Value='Center' />
		</Style>
	</Window.Resources>

	<DockPanel x:Name='MainPanel'
						 Background="#FFECF7FF"
						 LastChildFill="True">
		<TabControl>
			<TabItem Header='Logical'>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width='Auto' />
						<ColumnDefinition Width='1*' />

					</Grid.ColumnDefinitions>
					<StackPanel Margin='20,20'
											Grid.Column='0'>
						<TextBlock Text='Day of Week'
											 Margin='0,10' />

						<TextBox x:Name='DayTextBox'
										 Text='Monday' />
						<TextBlock Text='Time'
											 Margin='0,10' />
						<TextBox x:Name='TimeTextBox'
										 Text='5:00'
										 AutoWordSelection='True' />
						<TextBlock Text="Free Pizza if today is Monday AND it's 3:00"
											 Margin='20' />

						<Button x:Name="ButtonE"
										Content="And"
										HorizontalAlignment='Left'
										Margin='20' />
						<TextBlock Text="Free Pizza if today is Monday OR it's 3:00"
											 Margin='20' />

						<Button x:Name="ButtonG"
										Content="Or"
										HorizontalAlignment='Left'
										Margin='20' />
						<TextBox x:Name='PizzaAwardTextBox'
										 MinHeight='200' MaxHeight='200'
										 VerticalScrollBarVisibility='Visible'></TextBox>
					</StackPanel>
					<Image x:Name='PizzaImage'
								 Grid.Column='2'
								 Source='Images/Pizza.jpg'
								 MaxHeight='450'
								 Visibility='Hidden' />
					<Image x:Name='CouponImage'
								 Grid.Column='2'
								 Source='Images/Coupon.jpg'
								 MaxHeight='450'
								 Visibility='Hidden' />
				</Grid>
			</TabItem>

		</TabControl>

	</DockPanel>
</Window>