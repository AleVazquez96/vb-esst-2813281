<Window x:Class="MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:ExampleDesktop"
				mc:Ignorable="d"
				Title="Code Explorer"
				Height="800"
				Width="1000"
				FontSize="24"
				WindowState='Maximized'>
	<Window.Resources>
		<Style TargetType='Button'>
			<Setter Property='Margin'
							Value='20,10' />
			<Setter Property='Padding'
							Value='6' />
			<Setter Property='MinWidth'
							Value='145' />
			<Setter Property='VerticalAlignment'
							Value='Top' />
			<Setter Property='HorizontalAlignment'
							Value='Center' />
		</Style>
		<Style TargetType='RadioButton'>
			<Setter Property='VerticalContentAlignment'
							Value='Center' />
		</Style>
	</Window.Resources>

	<DockPanel x:Name='MainPanel'
						 Background="#FFECF7FF"
						 LastChildFill="True">
		<TabControl>
			<TabItem Header='Comparison'>
				<DockPanel>
					<StackPanel Orientation="Horizontal"
											DockPanel.Dock="Bottom"
											HorizontalAlignment="Center">
						<Button x:Name="ClearButton"
										Content="Clear" />
					</StackPanel>
					<StackPanel Orientation="Horizontal"
											DockPanel.Dock="Bottom"
											HorizontalAlignment="Center">
						<Button x:Name="ButtonA"
										Content="Select Case" />
						<!--<Button x:Name="ButtonD"
							Content="Search" />-->
					</StackPanel>
					<StackPanel Orientation='Horizontal'
											DockPanel.Dock="Top"
											HorizontalAlignment='Stretch'
											Margin="5">
						<TextBlock Text='The current random number:' />
						<TextBlock x:Name="CurrentRandomOutput"
											 HorizontalAlignment="Stretch"
											 MinWidth='200'
											 Margin='10,0'
											 Text="0"
											 VerticalAlignment="Stretch" />
					</StackPanel>

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width='1*' />
							<ColumnDefinition Width='1*' />
							<ColumnDefinition Width='1*' />
							<ColumnDefinition Width='2*' />
							<ColumnDefinition Width='1*' />
							<ColumnDefinition Width='1*' />
						</Grid.ColumnDefinitions>
						<DockPanel>
							<TextBlock Text='Case: 1 to 3'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="Text1"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>

						<DockPanel Grid.Column='1'>
							<TextBlock Text='Case: 5,7,9'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="Text2"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible'
											 Grid.Column='2' />
						</DockPanel>
						<DockPanel Grid.Column='2'>
							<TextBlock Text='Case: 4,6,8'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="Text3"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>
						<DockPanel Grid.Column='3'>
							<TextBlock Text='Case: 10 To 15, 17 To 19'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="Text4"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>
						<DockPanel Grid.Column='4'>
							<TextBlock Text='Case: Is &lt; 30'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="Text5"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>
						<DockPanel Grid.Column='5'>
							<TextBlock Text='Case Else'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="text6"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>
					</Grid>
				</DockPanel>
			</TabItem>
		</TabControl>
	</DockPanel>
</Window>