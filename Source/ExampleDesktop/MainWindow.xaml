<Window x:Class="MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:ExampleDesktop"
				mc:Ignorable="d"
				Title="Code Explorer"
				Height="800"
				Width="1000"
				FontSize="24"
				WindowState='Maximized'>
	<Window.Resources>
		<Style TargetType='Button'>
			<Setter Property='Margin'
							Value='20,10' />
			<Setter Property='Padding'
							Value='6' />
			<Setter Property='MinWidth'
							Value='145' />
			<Setter Property='VerticalAlignment'
							Value='Top' />
			<Setter Property='HorizontalAlignment'
							Value='Center' />
		</Style>
		<Style TargetType='RadioButton'>
			<Setter Property='VerticalContentAlignment'
							Value='Center' />
		</Style>
	</Window.Resources>

	<DockPanel x:Name='MainPanel'
						 Background="#FFECF7FF"
						 LastChildFill="True">
		<TabControl>
			<TabItem Header='Comparison'>
				<DockPanel>
					<StackPanel Orientation="Horizontal"
											DockPanel.Dock="Bottom"
											HorizontalAlignment="Center">
						<Button x:Name="ClearButton"
										Content="Clear" />
					</StackPanel>
					<StackPanel Orientation="Horizontal"
											DockPanel.Dock="Bottom"
											HorizontalAlignment="Center">
						<Button x:Name="ButtonA"
										Content="If" />
						<Button x:Name="ButtonB"
										Content="If Else" />
						<Button x:Name="ButtonC"
										Content="Else If" />
						<!--<Button x:Name="ButtonD"
							Content="Search" />-->
					</StackPanel>
					<StackPanel Orientation='Horizontal'
											DockPanel.Dock="Top"
											HorizontalAlignment='Stretch'
											Margin="5">
						<TextBlock Text='The current random number:' />
						<TextBlock x:Name="CurrentRandomOutput"
											 HorizontalAlignment="Stretch"
											 MinWidth='200'
											 Margin='10,0'
											 Text="0"
											 VerticalAlignment="Stretch" />

					</StackPanel>

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width='1*' />
							<ColumnDefinition Width='1*' />
							<ColumnDefinition Width='1*' />
						</Grid.ColumnDefinitions>
						<DockPanel>
							<TextBlock Text='Less than 100'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="LowNumberOutput"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>
						<DockPanel Grid.Column='3'>
							<TextBlock Text='Greater than 300'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="HighNumberOutput"
											 HorizontalAlignment="Stretch"
											 Margin="10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible' />
						</DockPanel>
						<DockPanel Grid.Column='1'>
							<TextBlock Text='Other value'
												 DockPanel.Dock='Top' />
							<TextBox x:Name="OtherNumberOutput"
											 HorizontalAlignment="Stretch"
											 Margin="40,10"
											 TextWrapping="Wrap"
											 Text=""
											 VerticalAlignment="Stretch"
											 IsReadOnly="True"
											 VerticalScrollBarVisibility='Visible'
											 Grid.Column='2' />
						</DockPanel>
					</Grid>

				</DockPanel>
			</TabItem>

		</TabControl>

	</DockPanel>
</Window>